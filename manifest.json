{
  "manifest_version": 3,
  "name": "Chrome Tabs Close Create Restore Update",
  "version": "1.0",
  "description": "An extension to close, create, restore and update tabs using custom hotkeys",
  "permissions": ["tabs", "sessions"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "reload-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up"
      },
      "description": "Reload the current tab"
    },
    "close-tab": {
      "suggested_key": {
        "default": "Ctrl+Down"
      },
      "description": "Close the current tab"
    },
    "create-tab": {
      "suggested_key": {
        "default": "Ctrl+Up"
      },
      "description": "Create a new tab to the right."
    },
    "restore-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down"
      },
      "description": "Restore the last closed tab."
    }
  }
}
